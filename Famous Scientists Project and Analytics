/* Create table about the people and what they do here */

CREATE TABLE FamousScientists (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    FirstName TEXT, LastName TEXT, country TEXT, BirthYear INTEGER, DeathYear INTEGER); 

